generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Admin del sistema (un Ãºnico user)
model user {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  email     String    @unique
  password  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// Usuarios normales (socios de la biblioteca)
model Usuario {
  id        Int        @id @default(autoincrement())
  nombre    String
  email     String     @unique
  prestamos Prestamo[] @relation("UsuarioPrestamos")
}

model Autor {
  id     Int    @id @default(autoincrement())
  nombre String
  libros Libro[]
}

model Libro {
  id        Int       @id @default(autoincrement())
  titulo    String
  stock     Int
  autorId   Int
  autor     Autor     @relation(fields: [autorId], references: [id])
  prestamos Prestamo[] @relation("LibroPrestamos")
}

model Prestamo {
  id        Int      @id @default(autoincrement())
  fecha     DateTime @default(now())
  usuarioId Int
  libroId   Int

  usuario   Usuario  @relation("UsuarioPrestamos", fields: [usuarioId], references: [id])
  libro     Libro    @relation("LibroPrestamos", fields: [libroId], references: [id])
}


