generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int       @id @default(autoincrement())
  nombre    String
  email     String    @unique
  password  String
  prestamos Prestamo[] @relation("UsuarioPrestamos") // ðŸ‘ˆ nombre de la relaciÃ³n
}

model Autor {
  id     Int    @id @default(autoincrement())
  nombre String
  libros Libro[]
}

model Libro {
  id        Int       @id @default(autoincrement())
  titulo    String
  stock     Int
  autorId   Int
  autor     Autor     @relation(fields: [autorId], references: [id])
  prestamos Prestamo[] @relation("LibroPrestamos")   // ðŸ‘ˆ nombre de la relaciÃ³n
}

model Prestamo {
  id        Int      @id @default(autoincrement())
  fecha     DateTime @default(now())
  usuarioId Int
  libroId   Int
  usuario   Usuario  @relation("UsuarioPrestamos", fields: [usuarioId], references: [id])
  libro     Libro    @relation("LibroPrestamos", fields: [libroId], references: [id])
}


