generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// User/admin
model User {
  id        Int       @id @default(autoincrement())
  clerkId   String    @unique    // ID de Clerk
  nombre    String
  email     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Cliente {
  id        Int        @id @default(autoincrement())
  nombre    String
  email     String     @unique
  prestamos Prestamo[] @relation("ClientePrestamos")
}

model Autor {
  id     Int    @id @default(autoincrement())
  nombre String
  libros Libro[]
}

model Libro {
  id        Int       @id @default(autoincrement())
  titulo    String
  stock     Int
  autorId   Int
  autor     Autor     @relation(fields: [autorId], references: [id])
  prestamos Prestamo[] @relation("LibroPrestamos")
}

model Prestamo {
  id        Int      @id @default(autoincrement())
  fecha     DateTime @default(now())
  clienteId Int
  libroId   Int

  cliente   Cliente  @relation("ClientePrestamos", fields: [clienteId], references: [id])
  libro     Libro    @relation("LibroPrestamos", fields: [libroId], references: [id])
}

